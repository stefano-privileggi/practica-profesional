  <link rel="stylesheet" href="resources/css/dataTable.css">

  <title>TABLA DE TIPOS DE DOCUMENTO</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <nav class="navbar navbar-dark"></nav>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/home">Inicio</a>
          </li>
        </ul>
      </div>
      <div style="display: inline; text-align: end; color:white;">
        <a style="padding-right: 10px; font-size: 12px;">
          <%= nombre %>
          <%= apellido %>
        </a>
        <i href="logout" class="fs-6 bi bi-box-arrow-right"></i>
      </div>

    </div>
  </nav>





    

   <div style="margin-top: 2%"> 
      <div class="row">
        <div class="col-1">
        </div>
  
        <div class="col-10">
          <a href="/typesOfDocuments/create">
            <button class="btn btn-success" style="font-size: 12px;">
              <i class="fa fa-plus"></i>
            </button>
          </a>  
          <br>
          <br>
          <table id="typesOfDocumentsTable" class="table-bordered text-center" style="font-size: 13px; width: 100%;">
                <thead>
                  <tr class="bg-primary text-white text-center">
                    <th scope="col">ID</th>
                    <th scope="col">DESCRIPCIÓN</th>
                    <th scope="col">ACCIONES</th>
                  </tr>
                </thead>
                <tbody>
                  <% listado.forEach((documento)=>{ %>
                  <tr>
                    <td>
                      <%= documento.id %>
                    </td>
                    <td>
                      <%= documento.descripcion %>
                    </td>
                    <td>
                      <div style="padding: 4px;">
                            <a href="/typesOfDocuments/edit/<%=documento.id %>" class="btn btn-primary" style="font-size: 11px;"><i
                              class="fas fa-pencil-alt" style="font-size: 13px;"></i>
                          </a>
                          <a href="/typesOfDocuments/delete/<%= documento.id %>"
                            onclick="return confirm('¿Estas seguro que quieres eliminar?');" class="btn btn-danger"
                            style="font-size: 11px;"><i class="fas fa-trash-alt" style="font-size: 13px;"></i>
                          </a>
                      </div>
                   
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
            </table>
        </div>
        <div class="col-1">
        </div>
      </div>
  

    </div>

  

    <br />

    <% if (alert) { %>
    <div class="alert alert-danger" role="alert">
      <%=error%>
    </div>
    <% } %>


  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>

  <!-- Datatables -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.10.25/b-1.7.1/b-html5-1.7.1/b-print-1.7.1/datatables.min.js">
  </script>
